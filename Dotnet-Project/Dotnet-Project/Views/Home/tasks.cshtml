<!-- Add Task Modal -->
<div class="modal-backdrop" id="addTaskModal">
    <div class="modal-content simple-modal">
        <h2 class="modal-title">New Task</h2>

        <form id="addTaskForm">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" placeholder="Text">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" placeholder="Hint text"></textarea>
            </div>

            <div class="form-group">
                <label for="department">Department</label>
                <select id="department">
                    <option value="" disabled selected>Text</option>
                    <option value="ui-ux">blabla</option>
                    <option value="backend">Backend Developer</option>
                    <option value="frontend">Frontend Developer</option>
                </select>
            </div>

            <div class="form-group">
                <label for="assignTo">assign to employee</label>
                <select id="assignTo">
                    <option value="" disabled selected>Text</option>
                    <option value="charlie">Charlie Kristen</option>
                    <option value="john">John Doe</option>
                </select>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn btn-cancel">cancel</button>
                <button type="submit" class="btn btn-create">Create</button>
            </div>
        </form>
    </div>
</div>

