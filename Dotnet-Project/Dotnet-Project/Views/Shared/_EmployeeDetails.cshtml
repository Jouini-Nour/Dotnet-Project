@model Dotnet_Project.Models.Employee;

<div class="profile-card">
    <div class="profile-container">
        <div class="profile-image-container">
            <img src="@Model.Image" alt="Name" class="profile-image" />
            <div class="name-title">
                <h2>@Model.Name</h2>
                <span class="title">@Model.Department</span>
            </div>
        </div>
        <div class="profile-info">
            
            <div class="contact-info">
                <div class="contact-item">
                    <img src="/images/email.svg" alt="Email" class="icon" />
                    <div class="contact-details">
                        <span class="label">EMAIL</span>
                        <span class="value">@Model.Email</span>
                    </div>
                </div>
                <div class="contact-item">
                    <img src="/images/phone.svg" alt="Phone" class="icon" />
                    <div class="contact-details">
                        <span class="label">PHONE NUMBER</span>
                        <span class="value">@Model.Phone</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>