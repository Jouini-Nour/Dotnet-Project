<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Logo -->
            <div class="logo-container">
                <img src="~/images/Star 1.svg" alt="TalentCore" class="logo" />
                <span class="title">TalentCore</span>
            </div>

            
            @RenderSection("Navbar", required: false)
            <!-- Logout -->
            <div class="logout-container">
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-item" style="background:none; border:none; cursor:pointer;">
                        <img class="logo" src="~/images/logout.svg" alt="Logout" />
                        <span>Logout</span>
                    </button>
                </form>
            </div>

        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <!--div class="search-container">
                    <img src="~/images/search-normal.svg" />
                    <input type="text" placeholder="Search for employees, meetings and more " class="search-input" />

                </!--div-->
                <div class="search-container">
                    <img src="~/images/search-normal.svg" alt="search icon" class="search-icon" />
                    <input type="text" placeholder="Search for employees, meetings and more " class="search-input" />
                </div>
                <div class="header-actions">
                    <button class="settings-btn">
                        <img src="~/images/settings.svg" />
                    </button>
                    <div class="user-profile">
                        <img src="~/images/avatar.svg" alt="Profile" class="profile-avatar" />
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="content-container">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
    <script src="~/js/Modal.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>