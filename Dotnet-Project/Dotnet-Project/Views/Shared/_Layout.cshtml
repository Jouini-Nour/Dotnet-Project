<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/meetings.css" />
    <link rel="stylesheet" href="~/css/Employees.css" />

</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Logo -->
            <div class="logo-container">
                <img src="~/images/Star 1.svg" alt="TalentCore" class="logo" />
                <span class="title">TalentCore</span>
            </div>

            <nav class="nav-menu">
                <a href="/employees" class="nav-item">
                    <img src="~/images/user.svg" />
                    <span>Employees</span>
                </a>
                <a href="/meetings" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Meetings" ? "active" : "")">
                    <img src="~/images/message-text.svg" />
                    <span>Meetings</span>
                </a>
            </nav>

            <!-- Logout -->
            <div class="logout-container">
                <a href="/logout" class="nav-item">
                    <img class="logo" src="~/images/logout.svg" />
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="search-container">
                    <img src="~/images/search-normal.svg" />
                    <input type="text" placeholder="Search for employees, meetings and more " class="search-input" />

                </div>
                <div class="header-actions">
                    <button class="settings-btn">
                        <img src="~/images/settings.svg" />
                    </button>
                    <div class="user-profile">
                        <img src="~/images/avatar.svg" alt="Profile" class="profile-avatar" />
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="content-container">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
    <script src="~/js/Modal.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>