@model IEnumerable<Dotnet_Project.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}

<div class="container">
    <h2>Employee List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Department</td>
                        <td>
                            <a href="@Url.Action("EmployeeManagement", "Employee", new { id = employee.Id })" class="btn btn-primary btn-sm">
                                Manage
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
