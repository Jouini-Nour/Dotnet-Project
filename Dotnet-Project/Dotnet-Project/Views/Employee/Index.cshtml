@model IEnumerable<Dotnet_Project.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}
@{
    ViewData["ActionName"] = "EmployeeProductivity"; 
    ViewData["ControllerName"] = "Employee";
}

@section Styles {
    <link rel="stylesheet" href="~/css/employeeList.css">
}
@section Navbar {
    <nav class="nav-menu">
        <a href="@Url.Action("Index", "Employee")" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Employee" ? "active" : "")">
            <img src="~/images/user.svg" />
            <span>Employees</span>
        </a>
        <a href="@Url.Action("Index", "Meeting")" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Meeting" ? "active" : "")">
            <img src="~/images/message-text.svg" />
            <span>Meetings</span>
        </a>
    </nav>
}

<div class="dashboard-container">
    <div class="dashboard">
        <div class="overview-section">
            <div class="stats-cards">
                <partial name="_EmployeeStats" />
            </div>



            <div class="team-members">
                 <h2>Employees</h2>
                @Html.Partial("_Team", Model)
            </div>
        </div>
    </div>
</div>