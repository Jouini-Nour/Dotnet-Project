@model IEnumerable<Dotnet_Project.Models.Meeting>

@{
    ViewData["Title"] = "Meetings";
}
@section Styles {
    <link rel="stylesheet" href="~/css/meetings.css">
}
@section Navbar {
    <nav class="nav-menu">
                <a href="/employees" class="nav-item">
                    <img src="~/images/user.svg" />
                    <span>Employees</span>
                </a>
                <a href="/meetings" class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Meetings" ? "active" : "")">
                    <img src="~/images/message-text.svg" />
                    <span>Meetings</span>
                </a>
            </nav>
}
<div class=" text-white p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Planned meetings</h2>
        <button class="btn-primary">Schedule a meeting</button>
    </div>

    <div class="table-responsive">
        <table class="table ">
            <thead>
                <tr>
                    <th>Participant</th>
                    <th>Moderator</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Subject</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meeting in Model) {
                
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@meeting.Participant.Image" class="rounded-circle me-2" width="30" height="30" />
                                <span>@meeting.Participant.Name</span>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@meeting.Moderator.Image" class="rounded-circle me-2" width="30" height="30" />
                                <span>@meeting.Moderator.Name</span>
                            </div>
                        </td>
                        <td>@meeting.Date</td>
                        <td>@meeting.Time</td>
                        <td>@meeting.Subject</td>
                        <td>
                            <button class="btn btn-danger btn-sm">Cancel</button>
                        </td>
                    </tr>
                
                }
            </tbody>
        </table>
    </div>

</div>
      <div class="modal-backdrop" style="display: none;">

       <div class="modal-content">
          <h2>Schedule a meeting</h2>
         <div class="form">
                            <form action="#" method="post">

                    <div class="form-group">
                        <label for="participant">Participant</label>
                        <input type="participant" id="participant" name="participant" >
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <textarea id="subject" name="subject"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="moderator">Moderator</label>
                        <input type="moderator" id="moderator" name="moderator" >
                    </div>

                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" id="date" name="date" >
                    </div>
                    <div class="form-group">
                        <label for="time">Time</label>
                        <input type="time" id="time" name="time" >
                    </div>

                    

                    <div class="modal-actions">
                        <button type="submit" class="btn btn-cancel">Cancel</button>
                        <button type="submit" class="btn btn-save">Save</button>

                    </div>

                    </form>
                    </div>
                    </div>
        </div>   
